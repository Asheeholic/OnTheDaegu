<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="co.yedam.otd.payment.service.TicketMapper">
	<!-- 티켓 전체 조회 필요한가? -->
	<select id="ticketSelectList" resultType="TicketVO">
		select * from ticket
	</select>

	<!-- 티켓 한건(가격) 조회 -->
	<select id="ticketSelect" resultType="TicketVO">
		select * from ticket where
		ticket_code = #{ticket_code}
	</select>

	<!-- 결제정보 전체 조회 -->
	<select id="paymentSelectList" resultType="PaymentVO">
		select * from payment
	</select>

	<!-- 결제방법(한건) 조회 -->
	<select id="paymentSelect" resultType="PaymentVO">
		select * from payment
		where
		payment_method = #{payment_method}
	</select>

	<!-- 결제내역 추가 -->
	<insert id="historyInsert">
		INSERT INTO history(num, email, history_date, ticket_code, ticket_no) VALUES(h_seq.nextval, #{email}, #{history_date}, #{ticket_code}, #{ticket_no})
	</insert>

	<!-- 결제내역 수정 -->
	<update id="historyUpdate" parameterType="HistoryVO">
		UPDATE history SET ticket_no = #{ticket_no} WHERE email = #{email}
	</update>

	<!-- 결제정보 추가 -->
	<insert id="paymentInsert">
		INSERT INTO payment VALUES (p_seq.nextval, #{email}, #{payment_price}, #{payment_method})
	</insert>
	
</mapper>